mixin footer(data)
  footer.footer
    .footer-top
      .footer-content.content
        .footer-items
          .footer-item
            .footer-item__name Курсы
            .footer-item__links
              ul
                li
                  a(href='#') Autodesk Autocad 2D
                li
                  a(href='#') Autodesk Autocad 3D
                li
