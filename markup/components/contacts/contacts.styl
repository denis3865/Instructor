section.contacts
  height 670px
  padding: 0
  width 100%
  position: relative
  .section-title h2
    display inline-block
    position relative
    z-index 4
  #map
    position absolute
    width 100%
    height 100%
    left 0
    top: 0
    filter: grayscale(100%); 
    z-index 1
    opacity 0.7

  .section-title
    padding-top: 90px
  .contacts-items
    width: 375px
    margin-left: auto
  .contact-item
    width 100%
    border-radius: 10px
    background: $accentColor
    height: 92px
    position relative
    z-index 3
    margin-bottom 10px
    svg
      fill : #ffffff
    &__content
      display flex 
      align-items: center
      width 85%
      margin 0 auto
      height 92px
    &__icon
      margin-right: 25px
    &__text,
    &__text a
      font-family: $Roboto
      set-font-size(20px)