.about
  &-content
    margin-bottom 30px
  &-video
    width 905px
    margin 0 auto
    height: 509px
    background: #000000
    margin-bottom: 60px
  &-advantages
    display: flex
    justify-content: space-between
    flex-wrap: wrap
  &-advantage
    width: 31.53564899%
    background: #ffffff
    border-radius 10px
    transition all 0.3s ease
    margin-bottom: 30px
    cursor pointer
    &:hover
      box-shadow: 7px 7px 10px 0px rgba(0,0,0,0.1)
    &__icon
      padding-top: 40px
      height: 82px
      display: flex
      justify-content: center
      align-items: flex-end
      padding-bottom 40px
      svg
        fill $accentColor
    &__title
      text-align: center
      margin-bottom 20px
      h5
        set-font-size(18px)
        color: $accentColor
        text-transform: uppercase
    &__text
      width 80%
      margin 0 auto
      text-align: center
      padding-bottom: 10px


  &-information
    background #2c2f38
    background -moz-linear-gradient(left, #2c2f38 0%, #34404e 70%, #34404e 100%)
    background -webkit-linear-gradient(left, #2c2f38 0%,#34404e 70%,#34404e 100%)
    background linear-gradient(to right, #2c2f38 0%,#34404e 70%,#34404e 100%)
    padding-top: 60px
    padding-bottom: 60px
    height 350px
    &__images
      height 350px
      img
        width 100%
        height 350px
        object-fit: cover
    &__content
      display flex
      justify-content: space-between
      align-items: flex-start
    &__left
      width: 48.6288848%
    &__right
      width: 48.6288848%
    &__text p
      color: #ffffff
      margin-top: 0
      margin-bottom: 20px
      line-height: 17px
      &:last-child
        margin-bottom 15px