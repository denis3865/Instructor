nav.menu
  width: 61.179487%
  margin-right: 5%

  ul
    display flex
    justify-content: space-between
    align-items: center
  a
    font-family $PTBold
    set-font-size(14px)
    text-decoration none
    text-transform uppercase
    transition all 0.3s ease 
    &:hover,
    // &:active,
    &:focus
      color: $accentColor
  ul.submenu-list
    display none
    z-index 11
    position absolute
    left 0
    top: 100%
    background: #14161a
    width 100%
    height 50px
    justify-content: center
    li
      margin-right 40px
      &:last-child
        margin-right: 0