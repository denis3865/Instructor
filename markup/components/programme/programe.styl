.programme
  padding-bottom: 70px
  .section-title
    padding-bottom 45px
  &-item
    background: #ffffff
    border-radius: 10px
    box-shadow 2px 2px 7px 0px rgba(0,0,0,0.25)
    padding-left: 5.9414991%
    padding-right 3.6563071%
    padding-top: 35px
    padding-bottom 35px
    margin-bottom 20px
    &.video
      .programme-title__video
        opacity 1
    &__title
      display flex
      align-items: center   
      cursor pointer
    &__content
      display flex
      padding-top 35px
      justify-content: space-between
    &__left
      width 47.0171891%
      margin-right 2.8816987%
      height 265px
      position relative
      .name-video
        position: absolute
        bottom: 0
        z-index: 10
        background: rgba(0,0,0,0.7)
        width: calc(100% - 20px )
        height: 55px
        display: flex
        align-items: center
        padding-left: 20px
        set-font-size(18px)
        color: #ffffff
      img
        width 100%
        height 265px
        object-fit: cover
      .fotorama__stage,
      .fotorama__wrap,
      .fotorama
        width: 100% !important
        height: 100% !important
      .fotorama__img
        height 265px !important 
        top 0 !important
        object-fit: cover
      .fotorama__wrap--video
        position absolute
        z-index 33
      .fotorama__video-play
        width 100%
        height 100%
        top 0
        margin-left 0
        margin-top 0
        left 0
        transition all 0.5s ease 
        background rgba(0,0,0,0.25) url("../img/assets/coursetop/fotorama.png") no-repeat center
        &:hover
          transform: scale(1.3)
    &__right
      width 50%
    &__theory
      padding-bottom 35px
      margin 0
      li
        color: #171a1a
        set-font-size(15px)
        cursor pointer
        transition all 0.3s ease
        line-height 1.6 
        &:hover
          color: $accentColor
    &.active
      .programme-title__arrow
        transform: rotate(180deg)
  &-content__wrapper
    display none
  &-title__video
    set-font-size(18px)
    padding: 8px 25px
    background $accentColor
    padding-top 6px
    margin-right: 35px
    margin-left: auto
    border-radius: 30px
    opacity: 0

  &-practice
    &__title
      set-font-size(15px)
      color #171a1a
      font-family: $RobotoBold
    &__paragraph
      p
        color: #171a1a
        margin 0

    &-title__arrow
      svg
        fill: $titleColor