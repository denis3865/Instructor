.portfolio
  background #2c2f38
  background -moz-linear-gradient(left, #2c2f38 0%, #34404e 70%, #34404e 100%)
  background -webkit-linear-gradient(left, #2c2f38 0%,#34404e 70%,#34404e 100%)
  background linear-gradient(to right, #2c2f38 0%,#34404e 70%,#34404e 100%)
  padding-bottom 80px
  .section-title 
    padding-bottom 40px
    h2
      color: #ffffff
  &-advantages
    margin-left 13.25411335%
    margin-bottom 45px
    li
      position relative
      line-height 2.2
      set-font-size(15px)
      padding-left 45px
      position: relative
      &::before
        content ''
        left 0
        top 0
        width 28px
        height 28px
        position absolute
        background: url('../img/assets/portfolio/correct.svg') no-repeat center
        background-size cover
  .fotorama__nav--dots .fotorama__nav__frame,
  .fotorama__nav--dots .fotorama__nav__frame .fotorama__active
    width 30px
    height 40px
    .fotorama__dot
      width 15px
      height 15px
      border-radius: 50%
      border-width 0
      background: #ffffff
  .fotorama__nav__frame.fotorama__active .fotorama__dot
    background: $accentColor
