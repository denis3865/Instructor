.coursetop
  background: url('../img/assets/slideshow/bg.jpg') no-repeat center
  position relative
  background-size cover
  padding-bottom 100px
  padding-top: 45px
  &::after
    content ''
    position: absolute
    width 100%
    height 100%
    left 0
    right 0
    bottom 0
    top 0
    background: #000000
    opacity 0.8
  &-content
    position relative
    z-index 2
    width 70.78125%
    margin 0 auto
  &-video
    width 100%
    height 510px
    background #000000
  &-button
    text-align: center
    margin-top: 30px
    margin-bottom: 25px
  .content
    position relative
    z-index 3
    padding-bottom 25px
  p
    color: #fff
    margin-bottom 0
    margin-top 20px
  ul.coursetop-paragraph__list
    margin-top 0
    padding-left: 20px
    list-style-type: disc
  .section-title 
    padding-bottom 15px
    h2
      color: #ffffff
    & + div
      p 
        set-font-size(18px)
        margin-bottom 30px