section.slideshow
  padding-top: 0
.slideshow
  height 580px
  width 100%
  &-item
    width 100%
    height 580px
    position: relative
    &__image
      background: url('../img/assets/slideshow/bg.jpg') no-repeat center
      background-size: cover
      width 100%
      height 580px
      position: relative
      &::before
        content ''
        position: absolute
        width 100%
        height 100%
        left 0
        right 0
        bottom 0
        top 0
        background: #000000
        opacity 0.5
    &__text
      position: absolute;
      top: 50%;
      width: 66%;
      text-align: center;
      left: 17%;
      text-transform: uppercase;
      margin-top: -48px
